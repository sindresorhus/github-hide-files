{
	"scripts": {
		"test": "tsc && xo !lib",
		"build": "tsc",
		"watch": "tsc --watch --sourceMap",
		"release:amo": "cd extension && web-ext-submit",
		"release:cws": "cd extension && webstore upload --auto-publish",
		"release": "run-s build update-version release:*",
		"update-version": "dot-json extension/manifest.json version $TRAVIS_TAG"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"@typescript-eslint/eslint-plugin": "^1.5.0",
		"chrome-webstore-upload-cli": "^1.1.1",
		"dot-json": "^1.1.0",
		"eslint-config-xo-typescript": "^0.9.0",
		"npm-run-all": "^4.1.3",
		"typescript": "^3.3.4000",
		"web-ext-submit": "^2.9.3",
		"xo": "^0.24.0"
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts",
			"tsx"
		],
		"envs": [
			"browser"
		]
	},
	"dependencies": {
		"@types/chrome": "0.0.81",
		"select-dom": "^5.0.1",
		"webext-domain-permission-toggle": "^0.1.0",
		"webext-dynamic-content-scripts": "^5.0.2"
	}
}
