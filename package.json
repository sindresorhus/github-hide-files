{
	"private": true,
	"scripts": {
		"test": "npm run build && xo",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch",
		"release:amo": "cd distribution && web-ext-submit",
		"release:cws": "cd distribution && webstore upload --auto-publish",
		"release": "run-s build update-version release:*",
		"update-version": "dot-json distribution/manifest.json version $TRAVIS_TAG"
	},
	"dependencies": {
		"@types/chrome": "0.0.103",
		"dom-chef": "^4.0.0",
		"element-ready": "^4.1.1",
		"select-dom": "^6.0.1",
		"webext-base-css": "^1.1.0",
		"webext-domain-permission-toggle": "^1.0.0",
		"webext-dynamic-content-scripts": "^6.0.3"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/react": "^16.9.32",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^5.1.1",
		"dot-json": "^1.2.0",
		"eslint": "^6.8.0",
		"npm-run-all": "^4.1.5",
		"size-plugin": "^2.0.1",
		"terser-webpack-plugin": "^2.3.5",
		"ts-loader": "^6.2.2",
		"typescript": "^3.8.3",
		"web-ext-submit": "^4.1.0",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"xo": "^0.28.3"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"@typescript-eslint/no-var-requires": "off",
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "^React$"
				}
			],
			"import/no-unassigned-import": "off"
		}
	}
}
