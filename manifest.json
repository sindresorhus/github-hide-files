{
	"name": "Hide Files on GitHub",
	"version": "1.2.7",
	"description": "Hide dotfiles from the file browser",
	"homepage_url": "https://github.com/sindresorhus/hide-files-on-github",
	"manifest_version": 2,
	"minimum_chrome_version": "46",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"https://github.com/*/*",
		"storage"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"api.js"
		]
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://github.com/*/*"
			],
			"exclude_matches": [
				"https://github.com/*/dotfiles*"
			],
			"css": [
				"css/content.css"
			],
			"js": [
				"api.js",
				"node_modules/github-injection/index.js",
				"content.js"
			]
		}
	]
}
